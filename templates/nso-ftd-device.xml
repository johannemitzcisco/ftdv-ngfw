<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
   <device tags="merge">
     <name>{$DEVICE-NAME}</name>
     <address>{$IP-ADDRESS}</address>
     <port>{$PORT}</port>
     <authgroup>{$AUTHGROUP}</authgroup>
     <device-type>
      <generic>
       <ned-id xmlns:cisco-ftd-gen-1.4="http://tail-f.com/ns/ned-id/cisco-ftd-gen-1.4">cisco-ftd-gen-1.4:cisco-ftd-gen-1.4</ned-id>
      </generic>
     </device-type>
     <ned-settings>
       <cisco-ftd xmlns="http://tailf.com/ned/cisco-ftd/meta">
         <connection>
           <ssl>
             <accept-any>true</accept-any>
           </ssl>
         </connection>
         <nedBehavior>
           <autoEndEasySetup>true</autoEndEasySetup>
           <enableAutoDeploy>true</enableAutoDeploy>
         </nedBehavior>
         <log-verbose>true</log-verbose>
       </cisco-ftd>
     </ned-settings>
     <connect-timeout>600</connect-timeout>
     <trace>raw</trace>
     <ned-settings>
      <cisco-ftd xmlns="http://tailf.com/ned/cisco-ftd/meta">
       <log-verbose>true</log-verbose>
      </cisco-ftd>
     </ned-settings>
     <state>
      <admin-state>unlocked</admin-state>
    </state>
   </device>
  </devices>
</config-template>
